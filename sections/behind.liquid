{% style %}

	#shopify-section-{{section.id}}.behind{
		padding-block: 80px;
	}
	#shopify-section-{{section.id}} .behind_title > h2{
		color: #232323;
		font-family: "Avenir";
		font-size: 56px;
		font-style: normal;
		font-weight: 450;
		line-height: 100%;
		text-align: center;
	}

	#shopify-section-{{section.id}} .behind_content{
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 60px;
	}

	#shopify-section-{{section.id}} .behind_content-items{
		display: flex;
		flex-direction: row;
		gap: 40px;
		align-items: center;
		max-width: 1280px;
		width: 100%;
	}

	#shopify-section-{{section.id}} .behind_content-img > img{
		width: 250px;
		height: 250px;
	}

	#shopify-section-{{section.id}} .behind_content-text{
		display: flex;
		flex-direction: column;
		gap: 24px;
	}

	#shopify-section-{{section.id}} .behind_content-text-title{
		color: #242424;
		font-family: "General Sans Semibold";
		font-size: 24px;
		font-style: normal;
		font-weight: 600;
		line-height: 140%;
	}
	#shopify-section-{{section.id}} .behind_content-text-dsc{
		color: #232323;
		font-family: "General Sans Regular";
		font-size: 20px;
		font-style: normal;
		font-weight: 400;
		line-height: 150%;
	}

	#shopify-section-{{section.id}} .behind_cta-title > h2{
		color: #FFF;
		text-align: center;
		font-family: "Cormorant Garamond";
		font-size: 52px;
		font-style: italic;
		font-weight: 500;
		line-height: 120%; /* 62.4px */
		letter-spacing: -0.52px;
		max-width: 700px;
		width: 100%;
	}

@media (max-width: 768px) {
    #shopify-section-{{section.id}}.behind {
        padding-block: 40px;
    }

    #shopify-section-{{section.id}} .behind_title > h2 {
        font-size: 32px;
        line-height: 120%;
    }

    #shopify-section-{{section.id}} .behind_content {
        gap: 40px;
    }

    #shopify-section-{{section.id}} .behind_content-items {
        flex-direction: row;
        gap: 16px;
        align-items: start;
        text-align: center;
    }

    #shopify-section-{{section.id}} .behind_content-img > img {
        width: 100px;
        height: 100px;
    }

    #shopify-section-{{section.id}} .behind_content-text {
        gap: 16px;
    }

    #shopify-section-{{section.id}} .behind_content-text-title {
        font-size: 20px;
		text-align: start;
    }

    #shopify-section-{{section.id}} .behind_content-text-dsc {
        font-size: 16px;
		text-align: start;
    }
}



