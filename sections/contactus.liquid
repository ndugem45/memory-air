{% assign img_contactus_open = 'img-contactus-open.png' | asset_url | append: '?v=' | append: 'timestamp' %}
{% assign img_contactus_1 = 'img-contactus-1.png' | asset_url | append: '?v=' | append: 'timestamp' %}
{% assign img_contactus_2 = 'img-contactus-2.png' | asset_url | append: '?v=' | append: 'timestamp' %}
{% assign img_contactus_3 = 'img-contactus-3.png' | asset_url | append: '?v=' | append: 'timestamp' %}

{% style %}
	#shopify-section-{{section.id}} .hero-contact {
		display: flex;
		justify-content: center;
		padding-bottom: 48px;
	}
	
	#shopify-section-{{section.id}} .container-contactus {
		display: flex;
		justify-content: center;
		flex-direction: column;
		align-items: center;
		padding-block: 50px;
	}
	
	#shopify-section-{{section.id}} .contactus_content {
		display: flex;
		flex-wrap: nowrap;
		justify-content: space-between;
		width: 100%;
	}
	@media only screen and (max-width: 990px) {
		#shopify-section-{{section.id}} .contactus_content {
			flex-direction: column;
			gap: 80px;
		}
	}
	
	#shopify-section-{{section.id}} .contactus_content-image,
	#shopify-section-{{section.id}} .contactus_content-form {
		width: 100%;
		position: relative;
	}
	#shopify-section-{{section.id}} .contactus_content-image{
		width: 612px;
		padding: 20px;
		border-radius: 16px;
		border: 1px solid #EEE;
		background: #FFF;
		box-shadow: -2px -2px 10px 0px rgba(238, 238, 238, 0.20), 2px 2px 10px 0px rgba(238, 238, 238, 0.20);
	}
	@media only screen and (max-width: 990px) {
		#shopify-section-{{section.id}} .contactus_content-image{
			width: 100%;
			max-width: 612px;
			margin: auto;
		}
	}
	#shopify-section-{{section.id}} .contactus_content-form {
		background-image: url('{{ "bg-form.png" | asset_url }}');
		background-position: top center;
		background-repeat: no-repeat;
		display: flex;
		align-items: start;
		justify-content: center;
		height: 800px;
		background-size: 780px 800px;
	}
	#shopify-section-{{section.id}} .contactus_img-head > img{
		width: 572px;
		height: 334px;
	}
	#shopify-section-{{section.id}} .image-wrapper > img{
		width: 184px;
		height: 90px;
	}
	#shopify-section-{{section.id}} .image-wrapper{
		display: flex;
		justify-content: space-between;
	}

	#shopify-section-{{section.id}} .contactus_text-title{
		color: #232323;
		font-family: "General Sans Medium";
		font-size: 32px;
		font-style: normal;
		font-weight: 500;
		line-height: 140%; /* 44.8px */
		display: flex;
		margin-bottom: 24px;
	}

	#shopify-section-{{section.id}} .contactus_img-text{
		display: flex;
		flex-direction: column;
	}

	#shopify-section-{{section.id}} .contactus_text-title > span{
		color: #232323;
		font-family: "Avenir";
		font-size: 15px;
		font-style: normal;
		font-weight: 450;
		line-height: 100%;
		padding-top: 8px;
		margin-right: 4px;
	}
	#shopify-section-{{section.id}} .contactus_text-list{
		color: #232323;
		font-family: "General Sans Medium";
		font-size: 18px;
		font-style: normal;
		font-weight: 500;
		line-height: 160%; /* 28.8px */
	}
	#shopify-section-{{section.id}} .contactus_text-list-dsc{
		color: #232323;
		font-family: "General Sans Regular";
		font-size: 14px;
		font-style: normal;
		font-weight: 400;
		line-height: 160%; /* 22.4px */
		margin-bottom: 16px;
	}
	#shopify-section-{{section.id}} form {
		display: flex;
		flex-direction: column;
		width: 100%;
		max-width: 612px;
		padding: 24px;
	}
	
	#shopify-section-{{section.id}} .input-layout {
		display: flex;
		justify-content: space-between;
		gap: 16px;
	}
	
	.input-form {
		border-radius: 16px;
		background: #F6F5F5;
		width: 100%;
		height: 48px;
		padding-left: 16px;
		padding-right: 16px;
	}
	
	.select-input:invalid,
	input::placeholder,
	textarea::placeholder {
		color: rgba(35, 35, 35, 0.4);
		font-family: "General Sans Regular";
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: 145%;
	}
	
	textarea {
		height: 134px !important;
		padding-top: 12px;
	}
	
	#shopify-section-{{section.id}} .lable-form {
		color: #232323;
		font-family: "General Sans Regular";
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: 160%;
	}
	
	#shopify-section-{{section.id}} .btn-full {
		width: 100%;
	}

	#shopify-section-{{section.id}} .lable-bottom-form{
		color: rgba(35, 35, 35, 0.4);
		text-align: center;
		font-family: "General Sans Regular";
		font-size: 14px;
		font-style: normal;
		font-weight: 400;
		line-height: 160%; /* 22.4px */
	}
	#shopify-section-{{section.id}} .contactus-title_btm > p {
		color: #232323;
		text-align: justify;
		font-family: "General Sans Regular";
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: 160%; /* 25.6px */
	}
	
@media (max-width: 768px) {
    #shopify-section-{{section.id}} .hero-contact {
        flex-direction: column;
        padding-bottom: 24px;
    }

    #shopify-section-{{section.id}} .container-contactus {
        padding-block: 30px;
    }

    #shopify-section-{{section.id}} .contactus_content {
        flex-direction: column;
        gap: 30px;
    }

    #shopify-section-{{section.id}} .contactus_content-image,
    #shopify-section-{{section.id}} .contactus_content-form {
        width: 100%;
    }

    #shopify-section-{{section.id}} .contactus_content-image {
        padding: 16px;
        width: 100%;
        box-shadow: none;
    }

    #shopify-section-{{section.id}} .contactus_img-head > img {
        width: 100%; 
        height: auto;
    }

    #shopify-section-{{section.id}} .image-wrapper {
        display: block; 
        text-align: center;
    }

    #shopify-section-{{section.id}} .contactus_text-title {
        font-size: 24px;
        line-height: 140%;
        margin-bottom: 16px;
    }

    #shopify-section-{{section.id}} .contactus_img-text {
        flex-direction: column;
    }

    #shopify-section-{{section.id}} .contactus_text-list {
        font-size: 16px;
    }

    #shopify-section-{{section.id}} .contactus_text-list-dsc {
        font-size: 12px;
        margin-bottom: 12px;
    }


    #shopify-section-{{section.id}} .lable-bottom-form {
        font-size: 12px;
    }

    #shopify-section-{{section.id}} .contactus-title_btm > p {
        font-size: 14px;
    }
}

{% endstyle %}
	


