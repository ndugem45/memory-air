{% assign logo = 'footer-logo.webp' | asset_url | append: '?v=' | append: 'timestamp' %}

{% style %}
  footer{
      display: flex;
      flex-direction: column;
      padding-top: 33px;
      padding-bottom: 65px;
      justify-content: center;
      align-items: center;
      background-color: var(--color-secondary);
      color: white;
  }
  footer .container{
      padding-inline: 118px;
  }
  footer .container.top{
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding-bottom: 38px;
  }
  footer .container.btm{
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding-top: 13px;
      position: relative;
  }
  footer .container.btm::after{
      content: '';
      width: calc( 100% - calc( 118px * 2 ) );
      border-top: 1px solid 
      rgba(255, 255, 255, 0.2);
      position: absolute;
      top: 0;
  }
  footer .left{
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 24px;
      max-width: 336px;
  }
  footer .left p{
      text-transform: capitalize;
      text-align: center;
  }
  footer .footer_logo{
      height: 168px;
      object-fit: contain;
  }
  footer form{
      width: 100%;
      display: flex;
      padding: 4px 32px;
      flex-direction: row;
      justify-content: space-between;
      align-items: stretch;
      border-radius: 9999px;
      border: 1px solid white;
      color: white;
  }
  footer form input{
      font-family: "General Sans Regular";
      font-size: 18px;
      font-style: normal;
      font-weight: 400;
      line-height: 150%;
      padding-right: 24px;
      color: white;
  }
  footer form svg{
      color: white;
  }
  footer .right{
      display: flex;
      flex-direction: column;
      gap: 31px;
      max-width: 460px;
  }
  footer .right a{
      color: white;

      font-family: "General Sans Regular";
      font-size: 14px;
      font-style: normal;
      font-weight: 400;
      line-height: 150%;
      text-transform: capitalize;
  }
  footer .right .menu-group{
      display: flex;
      gap: 60px;
  }
  footer .right .menu-wrap{
      display: flex;
      flex-direction: column;
      gap: 15px;
  }
  footer .right .menu-btm{
      margin-top: 16px;
      display: flex;
      align-items: center;
      gap: 18px;
  }
  footer .right .menu-btm p{
      max-width: 236px;
  }
  footer .menu-term{
      display: flex;
      align-items: center;
      gap: 24px;
  }
  footer .menu-term a{
      color: white;
  }
  footer form input::placeholder {
      font-size: 16px;
      color: white;
  }
  footer .menu-wrap.mobile{
    display: none;
  }

@media (max-width: 990px) {
  footer .container {
      padding-inline: 24px;
  }

  footer .container.top {
      flex-direction: column;
      align-items: center;
      gap: 24px;
      text-align: center;
  }

  footer .container.btm {
      flex-direction: column-reverse;
      align-items: center;
      gap: 24px;
      text-align: center;
      padding-top: 24px;
  }

  footer .container.btm::after {
      width: 100%;
  }

  footer .left {
      max-width: 100%;
      align-items: center;
      text-align: center;
  }

  footer .footer_logo {
      height: 120px;
  }

  footer form {
      flex-direction: row;
      padding: 8px 16px;
      border-radius: 54px;
      gap: 8px;
  }

  footer form input {
      font-size: 16px;
      padding: 8px;
  }
  footer form input::placeholder {
      font-size: 16px;
  }

  footer .right {
      max-width: 100%;
      align-items: flex-start;
      gap: 24px;
      text-align: start;
      width: 100%;
  }

  footer .right .menu-group {
      flex-direction: column;
      gap: 16px;
      width: 100%;
  }

  footer .right .menu-wrap {
      gap: 8px;
      padding-top: 24px;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
  }
  footer .right .menu-wrap .menu-btm{
    display: none;
  }

  footer .right .menu-btm {
      flex-direction: row;
      gap: 24px;
      align-items: center;
      justify-content: center;
  }

  footer .menu-term {
    flex-direction: row;
    gap: 24px;
  }

  footer .right .menu-btm p{
    text-align: center;
  }
  footer .menu-wrap.mobile{
    display: flex;
  }
}



