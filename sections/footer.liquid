{% assign logo = 'footer-logo.webp' | asset_url | append: '?v=' | append: 'timestamp' %}

{% style %}
  footer{
      display: flex;
      flex-direction: column;
      padding-top: 33px;
      padding-bottom: 65px;
      justify-content: center;
      align-items: center;
      background-color: var(--color-secondary);
      color: white;
  }
  footer .container{
      padding-inline: 118px;
  }
  footer .container.top{
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding-bottom: 38px;
  }
  footer .container.btm{
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding-top: 13px;
      position: relative;
  }
  footer .container.btm::after{
      content: '';
      width: calc( 100% - calc( 118px * 2 ) );
      border-top: 1px solid 
      rgba(255, 255, 255, 0.2);
      position: absolute;
      top: 0;
  }
  footer .left{
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 24px;
      max-width: 336px;
  }
  footer .left p{
      text-transform: capitalize;
      text-align: center;
  }
  footer .footer_logo{
      height: 168px;
  }
  footer form{
      width: 100%;
      display: flex;
      padding: 4px 32px;
      flex-direction: row;
      justify-content: space-between;
      align-items: stretch;
      border-radius: 9999px;
      border: 1px solid white;
      color: white;
  }
  footer form input{
      font-family: "General Sans";
      font-size: 18px;
      font-style: normal;
      font-weight: 400;
      line-height: 150%;
      padding-right: 24px;
      color: white;
  }
  footer form svg{
      color: white;
  }
  footer .right{
      display: flex;
      flex-direction: column;
      gap: 31px;
      max-width: 460px;
  }
  footer .right a{
      color: white;

      font-family: "General Sans";
      font-size: 14px;
      font-style: normal;
      font-weight: 400;
      line-height: 150%;
      text-transform: capitalize;
  }
  footer .right .menu-group{
      display: flex;
      gap: 60px;
  }
  footer .right .menu-wrap{
      display: flex;
      flex-direction: column;
      gap: 15px;
  }
  footer .right .menu-btm{
      margin-top: 16px;
      display: flex;
      align-items: center;
      gap: 18px;
  }
  footer .right .menu-btm p{
      max-width: 236px;
  }
  footer .menu-term{
      display: flex;
      align-items: center;
      gap: 24px;
  }
  footer .menu-term a{
      color: white;
  }
{% endstyle %}

