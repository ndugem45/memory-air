{% comment %} for healthcare page {% endcomment %}

{% assign science-display = 'science-illus-n.webp' | asset_url | append: '?v=' | append: 'timestamp' %}

{% style %}

#shopify-section-{{section.id}}.hero2 {
	padding-bottom: 64px;
	padding-top: 135px;
	background: linear-gradient(
			180deg,
			rgba(170, 126, 113, 0.1) 0%,
			rgba(170, 126, 113, 0.0) 100%
		), #fff;
}
#shopify-section-{{section.id}}.hero2 .container {
	display: flex;
	flex-direction: row;
	align-items: center;
	gap: 79px;
}
#shopify-section-{{section.id}}.hero2 .content {
	max-width: 588px;
}
#shopify-section-{{section.id}}.hero2 .illus {
	width: 634px;
}


@media (max-width: 768px) {
	#shopify-section-{{section.id}}.hero2 {
		padding-top: 120px;
	}

	#shopify-section-{{section.id}}.hero2 .container {
		flex-direction: column;
		gap: 40px;
	}

	#shopify-section-{{section.id}}.hero2 .content {
		max-width: 100%;
		padding: 0 0;
	}
	#shopify-section-{{section.id}}.hero2 .content > h1{
		font-size: 40px;
	}
	#shopify-section-{{section.id}}.hero2 .content > h1 > span{
		font-size: 40px;
	}
	#shopify-section-{{section.id}}.hero2 .content > p{
		font-size: 16px;
	}

	#shopify-section-{{section.id}}.hero2 .illus {
		width: 80%;
		max-width: 400px;
	}
}

    {% endstyle %}
    
    <div class="container">
