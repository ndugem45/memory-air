{% assign bg = 'hero_bg.png' | asset_url | append: '?v=' | append: 'timestamp' %}

{% style %}
  #shopify-section-{{section.id}}.hero{
    background: #375461 url('{{ bg }}') no-repeat;
    background-position: top center;
    background-size: cover;
    color: white !important;
    padding-top: 233px;
    padding-bottom: 255px;
  }
  @media only screen and (max-width: 990px) {
    #shopify-section-{{section.id}}.hero{
      background-position: 60% 0% !important;
      padding-block: 150px !important;
    }
  }
  #shopify-section-{{section.id}}.hero .hero_desc {
    font-family: "General Sans Semibold";
    font-weight: 600;
    font-size: 24px;
    line-height: 140%;
    letter-spacing: 0;
    max-width: 524px;
  }
  @media only screen and (max-width: 990px) {
    #shopify-section-{{section.id}}.hero p{
      max-width: 50% !important;
      margin-bottom: 32px !important;
    }
    #shopify-section-{{section.id}} .btn-wrap{
      flex-direction: column;
      align-items: flex-start;
    }
    #shopify-section-{{section.id}} .btn-wrap .btn{
      min-width: 160px;
    }
  }
{% endstyle %}

<div class="container">
  <div class="hero_content">
    <h1 class="m-btm m-32">
      Prevent & Reverse <br>
      <span>
        Memory Loss...
      </span><br>
      ...While you sleep!
    </h1>
    <p class="hero_desc m-btm m-98">
      The Biggest Improvement in Human Memory Ever Discovered.
    </p>
    <div class="btn-wrap">
      {% if section.settings.section_product %}
        <a class="btn" href="{{ section.settings.section_product.url }}">Buy Now</a>
      {% endif %}
      <a class="btn is-outline" href="{{ section.settings.video_cta }}">Watch video</a>
    </div>
  </div>
</div>

{% schema %}
  {
    "tag": "section",
    "class": "hero",
    "settings": [
      {
        "type": "product",
        "id": "section_product",
        "label": "Selected product"
      },
      {
        "type": "url",
        "id": "video_cta",
        "label": "Watch video url"
      },
    ]
  }
{% endschema %}