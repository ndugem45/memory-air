{% style %}
  #shopify-section-{{section.id}}{
    overflow: hidden; 
  }
  #shopify-section-{{section.id}} .container{
    display: flex;
    flex-direction: column;
  }
  #shopify-section-{{section.id}} h2{
    margin-bottom: 86px;
  }
  #shopify-section-{{section.id}} .content{
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding-top: 215px;
    padding-bottom: 500px;
  }
  #shopify-section-{{section.id}} .content::after{
    width: 200px;
    height: 200px;
    content: '';
    position: absolute;
    border: 1.5px solid #D4A67A;
    border-radius: 50%;
    z-index: 1;
    animation-name: pulse;
    animation-duration: 2000ms;
    animation-iteration-count: infinite;
  }
  #shopify-section-{{section.id}} .content::before{
    width: 200px;
    height: 200px;
    content: '';
    position: absolute;
    border: 1.5px solid #D4A67A;
    border-radius: 50%;
    z-index: 1;
    animation-name: pulse;
    animation-duration: 2000ms;
    animation-delay: 500ms;
    animation-iteration-count: infinite;
  }
  @media only screen and (max-width: 1048px) {
    #shopify-section-{{section.id}} .content::after,
    #shopify-section-{{section.id}} .content::before{
      display: none;
    }
  }
  @keyframes pulse {
    0% {
      width: 200px;
      height: 200px;
      opacity: 1;
    }
    95%{
      opacity: 0;
    }
    100% {
      width: 800px;
      height: 800px;
      opacity: 0;
    }
  }
  #shopify-section-{{section.id}} .content .item-wrap{
    display: flex;
    justify-content: center;
  }
  @media only screen and (max-width: 1048px) {
    #shopify-section-{{section.id}} .content{
      padding-top: 0;
      padding-bottom: 0;
      gap: 42px;
      align-items: flex-start;
    }
    #shopify-section-{{section.id}} .content .item-wrap{
      display: flex;
      flex-direction: column; 
      gap: 42px;
    }
  }
  @media only screen and (max-width: 780px) {
    #shopify-section-{{section.id}} .content{
      flex-direction: column;
      width: max-content;
      margin: auto;
      align-items: center;
    }
    #shopify-section-{{section.id}} .content .item-wrap{
      gap: 32px;
    }
  }
  @media only screen and (max-width: 480px) {
    #shopify-section-{{section.id}} .content{
      width: 100%;
    }
  }
  #shopify-section-{{section.id}} .content .product{
    width: 283px;
    position: relative;
    z-index: 2;
  }
  @media only screen and (max-width: 1048px) {
    #shopify-section-{{section.id}} .content .product{
      position: sticky;
      top: 160px;
    }
  }
  @media only screen and (max-width: 780px) {
    #shopify-section-{{section.id}} .content .product{
      position: relative;
      top: 0;
      width: 180px;
    }
  }
  #shopify-section-{{section.id}} .content .item{
    position: absolute;
    display: flex;
    flex-direction: column;
    gap: 32px;
    max-width: 450px;
    z-index: 2;
  }
  @media only screen and (max-width: 1048px) {
    #shopify-section-{{section.id}} .content .item{
      position: relative;
      gap: 24px;
    }
  }
  @media only screen and (max-width: 780px) {
    #shopify-section-{{section.id}} .content .item{
      gap: 12px;
    }
  }
  #shopify-section-{{section.id}} .content .item .head{
    display: flex;
    flex-direction: row;
    gap: 12px;
    align-items: center; 
  }
  #shopify-section-{{section.id}} .content .item .head img{
    width: 66px;
    object-fit: contain;
  }
  @media only screen and (max-width: 780px) {
    #shopify-section-{{section.id}} .content .item .head img{
      width: 42px;
    }
  }
  #shopify-section-{{section.id}} .content .item .head span{
    font-family: "General Sans Medium";
    font-size: 21px;
    font-style: normal;
    font-weight: 500;
    line-height: 130%;
    text-align: center;
    border-radius: 80px;
    border: 1px solid var(--color-primary);
    background: #F6F2F1;
    box-shadow: -4px -4px 20px 0px rgba(204, 204, 204, 0.10), 4px 4px 20px 0px rgba(204, 204, 204, 0.10);
    padding: 10px 24px;
  }
  @media only screen and (max-width: 1080px) {
    #shopify-section-{{section.id}} .content .item .head span{
      font-size: 18px;
      padding: 8px 14px;
    }
  }
  @media only screen and (max-width: 780px) {
    #shopify-section-{{section.id}} .content .item .head span{
      font-size: 16px;
      padding: 4px 12px;
    }
  }
  #shopify-section-{{section.id}} .content .item .body{
    font-family: "General Sans Regular";
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    color: #3C2E25;
  }
  @media only screen and (max-width: 1240px) {
    #shopify-section-{{section.id}} .content .item .body{
      font-size: 16px;
    }
  }
  @media only screen and (max-width: 990px) {
    #shopify-section-{{section.id}} .content .item .body{
      font-size: 14px;
    }
  }
  #shopify-section-{{section.id}} .content .item .body ul{
    margin: unset;
  }
  #shopify-section-{{section.id}} .content #item-1{
    top: 0;
    left: 0;
  }
  #shopify-section-{{section.id}} .content #item-2{
    top: 0;
    right: 0;
  }
  #shopify-section-{{section.id}} .content #item-3{
    top: 400px;
    left: 0;
    /* max-width: 500px; */
  }
  #shopify-section-{{section.id}} .content #item-4{
    top: 400px;
    right: 0;
    /* max-width: 500px; */
  }
  #shopify-section-{{section.id}} .content #item-5{
    top: 800px;
    left: 10%;
  }
  #shopify-section-{{section.id}} .content #item-6{
    top: 800px;
    right: 10%;
  }
  #shopify-section-{{section.id}} .content #item-7{
    bottom: 0;
  }
  @media only screen and (max-width: 1048px) {
    #shopify-section-{{section.id}} .content #item-1,
    #shopify-section-{{section.id}} .content #item-2,
    #shopify-section-{{section.id}} .content #item-3,
    #shopify-section-{{section.id}} .content #item-4,
    #shopify-section-{{section.id}} .content #item-5,
    #shopify-section-{{section.id}} .content #item-6,
    #shopify-section-{{section.id}} .content #item-7{
      top: unset;
      left: unset;
      right: unset;
      bottom: unset;
      align-self: flex-start;
    }
  }
{% endstyle %}

