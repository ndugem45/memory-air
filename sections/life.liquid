{% style %}
  #shopify-section-{{section.id}}.life{
    background: linear-gradient(180deg, rgba(170, 126, 113, 0.00) 0%, rgba(170, 126, 113, 0.10) 100%), #FFF;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  #shopify-section-{{section.id}}.life h2{
    text-align: center;
  }
  @media only screen and (max-width: 990px) {
    #shopify-section-{{section.id}}.life h2{
      margin-bottom: 32px;
    }
  }
  #shopify-section-{{section.id}}.life .container.btm{
    padding: unset;
    max-width: 2048px;
  }
  #shopify-section-{{section.id}}.life .life_slider{
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 20px;
  }
  @media only screen and (min-width: 2048px) {
    #shopify-section-{{section.id}}.life .life_slider{
      border-radius: 32px;
      overflow: hidden;
    }
  }
  #shopify-section-{{section.id}}.life .slider_item-wrap{
    padding-inline: 10px;
  }
  #shopify-section-{{section.id}}.life .slider_item{
    flex-shrink: 0;
    width: 412px;
    height: 515px;
    border-radius: 24px;
    overflow: hidden;
    background-color: #C58346;
    position: relative;
  }
  #shopify-section-{{section.id}}.life .slider_item img{
    height: 100%;
    object-fit: cover;
  }
  @media only screen and (max-width: 990px) {
    #shopify-section-{{section.id}}.life .slider_item{
      width: 230px;
      height: 330px;
    }
  }
  #shopify-section-{{section.id}}.life .slider_item::after{
    background: linear-gradient(180deg, rgba(244, 237, 228, 0) 50.28%, #F4EDE4 100%);
    content: '';
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    position: absolute;
    z-index: 1;
  }
  #shopify-section-{{section.id}}.life .slider_item div{
    position: absolute;
    width: 100%;
    bottom: 32px;
    left: 0;
    padding-inline: 24px;
    font-family: "General Sans Regular";
    z-index: 2;
  }
  @media only screen and (max-width: 990px) {
    #shopify-section-{{section.id}}.life .slider_item div{
      font-size: 22px;
    }
    #shopify-section-{{section.id}}.life .navigation-slider{
      margin-top: 42px;
    }
    #shopify-section-{{section.id}}.life .navigation-slider svg{
      width: 58px;
    }
  }
{% endstyle %}

<div class="container">
  <h2 class="m-btm m-78 text-primary">
    {{ section.settings.section_title }}
  </h2>
</div>
<div class="container btm">
  <div class="life_slider">
    {%-  for life_item in section.settings.section_list_item -%}
      <div class="slider_item-wrap">
        <div class="slider_item">
          {{ life_item.image | image_url: width: 411 | image_tag }}
          <div class="font-medium text-32">
            {{  life_item.title }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="navigation-slider m-top m-78">
    <button id="life-prev">
      <svg width="85" height="84" viewBox="0 0 85 84" fill="none" xmlns="http://www.w3.org/2000/svg">
        <rect x="0.208008" width="84" height="84" rx="42" fill="white" />
        <path d="M45.208 49.5L37.708 42L45.208 34.5" stroke="#3C2E25" stroke-width="2" stroke-linecap="round"
          stroke-linejoin="round" />
      </svg>
    </button>
    <div id="life-indicator" class="navigation-slider_indicator">
      <div class="bar"></div>
    </div>
    <button id="life-next">
      <svg width="85" height="84" viewBox="0 0 85 84" fill="none" xmlns="http://www.w3.org/2000/svg">
        <rect x="0.208008" width="84" height="84" rx="42" fill="white" />
        <path d="M39.208 34.5L46.708 42L39.208 49.5" stroke="#3C2E25" stroke-width="2" stroke-linecap="round"
          stroke-linejoin="round" />
      </svg>
    </button>
  </div>
</div>

<script>
  $(document).ready(() => {
    $('.life_slider').on('init', (event, slick) => {
      const totalSlides = slick.slideCount;
      const widthPercentage = (1 / totalSlides) * 100;
      $('#life-indicator .bar').css('width', widthPercentage + '%');
    });

    $('.life_slider').slick({
      arrows: false,
      dots: false,
      centerMode: true,
      variableWidth: true,
      autoplay: true,
      autoplaySpeed: 2000,
    });

    $('.life_slider').on('afterChange', (event, slick, currentSlide) => {
      const totalSlides = slick.slideCount;
      const widthPercentage = ((currentSlide + 1) / totalSlides) * 100;
      $('#life-indicator .bar').css('width', widthPercentage + '%');
    });

    $('#life-prev').click(() => {
      $('.life_slider').slick('slickPrev');
    });

    $('#life-next').click(() => {
      $('.life_slider').slick('slickNext');
    });
  });
</script>

