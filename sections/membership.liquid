{% assign illus = 'member-illus.webp' | asset_url | append: '?v=' | append: 'timestamp' %}

{% style %}
  .membership {
    padding-top: 115px;
    padding-bottom: 30px;
    background: linear-gradient(
      180deg,
      rgba(170, 126, 113, 0.1) 0%,
      rgba(170, 126, 113, 0.0) 98.6%
    );
  }
  .membership .card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 700px;
    padding: 14px;
    align-items: center;
    gap: 95px;

    border-radius: 16px;
    background: #fff;
    box-shadow: -2px -2px 10px 0px rgba(204, 204, 204, 0.1), 2px 2px 10px 0px
      rgba(238, 238, 238, 0.1);
  }
  .membership .card .content {
    max-width: 531px;
  }
  .membership .card img {
    height: 672px;
    width: 55%;
    max-width: 720px;
    object-fit: cover;
    border-radius: 15px;
  }
  .membership .card p {
    color: var(--color-primary);
    font-family: "General Sans Regular";
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 155%;
    padding-block: 24px;
    padding-right: 80px;
  }
  .membership .card form {
    width: 100%;
    padding: unset;
    margin-bottom: 24px;
    padding-right: 80px;
  }
  .membership .card form button {
    margin-top: 40px;
    border-radius: 16px;
  }
  .membership .card .label {
    color: var(--color-primary);
    text-align: center;
    font-family: "General Sans Regular";
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 160%;
    text-align: center;
    opacity: 0.4;
    padding-right: 80px;
  }

@media (max-width: 1024px) {
    .membership {
        padding-top: 120px;
        padding-bottom: 20px;
    }

    .membership .card {
        flex-direction: column;
        height: auto;
        gap: 50px;
        padding: 20px;
    }

    .membership .card img {
        width: 100%;
        max-width: 500px;
        height: auto;
    }

    .membership .card .content {
        max-width: 100%;
        text-align: center;
    }

    .membership .card p,
    .membership .card form,
    .membership .card .label {
        padding-right: 0;
    }
}

@media (max-width: 768px) {
    .membership {
        padding-top: 60px;
        padding-bottom: 20px;
    }

    .membership .card {
        gap: 30px;
        padding: 16px;
    }

    .membership .card img {
        max-width: 400px;
    }

    .membership .card p {
        font-size: 16px;
        padding-block: 16px;
    }

    .membership .card form {
        margin-bottom: 16px;
    }

    .membership .card form button {
        margin-top: 24px;
    }

    .membership .card .label {
        font-size: 12px;
    }
}

@media (max-width: 480px) {
    .membership {
        padding-top: 120px;
        padding-bottom: 10px;
    }

    .membership .card {
        gap: 20px;
        padding: 12px;
    }
    .content > h2,
    .content > h2 > span {
      font-size: 34px;
      text-align: left;
    }

    .membership .card img {
        max-width: 100%;
    }

    .membership .card p {
        font-size: 14px;
        line-height: 140%;
    }

    .membership .card form button {
        margin-top: 16px;
    }

    .membership .card .label {
        font-size: 12px;
        line-height: 140%;
    }
}



{% endstyle %}

<div class="container">
  <div class="card">
    <img src="{{ illus }}" alt="">
    <div class="content">
      <h2>
        Membership <span>Login</span>
      </h2>
      <p>
        Enter your email below to receive a magic link to log into manage your membership or access your Memory
        Test.
      </p>
      <form action="">
        <input type="email" class="input-form" placeholder="Email">
        <button type="submit" class="btn is-black">Send</button>
      </form>
      <div class="label">
        By signing in you agree with the Terms and Conditions and Privacy Policy
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "tag": "section",
    "class": "membership"
  }
{% endschema %}