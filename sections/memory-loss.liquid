{% comment %} for healthcare page {% endcomment %}

{% assign science-iluss = 'science-illus1.webp' | asset_url | append: '?v=' | append: 'timestamp' %}
{% assign science-iluss2 = 'science-illus2.webp' | asset_url | append: '?v=' | append: 'timestamp' %}
{% assign science-iluss3 = 'science-illus3.webp' | asset_url | append: '?v=' | append: 'timestamp' %}

{% style %}

	#shopify-section-{{section.id}}.hero2 {
		padding-bottom: unset;
		padding-top: 135px;
		background: linear-gradient(
				180deg,
				rgba(170, 126, 113, 0.1) 0%,
				rgba(170, 126, 113, 0.0) 100%
			), #fff;
	}
	#shopify-section-{{section.id}}.hero2 .container {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 79px;
	}
	#shopify-section-{{section.id}}.hero2 .content {
		max-width: 588px;
	}
	#shopify-section-{{section.id}}.hero2 .illus {
		width: 634px;
	}

	#shopify-section-{{section.id}} .memory-los {
		background: rgb(255, 255, 255);
		background: linear-gradient(
			180deg,
			rgba(255, 255, 255, 1) 0%,
			rgba(251, 249, 248, 1) 100%
		);
	}
	#shopify-section-{{section.id}} .plain {
		background: unset;
		padding-top: 168px;
	}
	#shopify-section-{{section.id}} .memory-los_card {
		display: flex;
		flex-direction: column;
		padding: 24px;
		justify-content: space-between;
		align-items: center;
		align-self: stretch;
		border-radius: 24px;
		gap: 48px;
		background: var(--color-light);
	}
	#shopify-section-{{section.id}} .memory-los_card.dark {
		background: #f4ede4;
	}
	#shopify-section-{{section.id}} .memory-los_card .label {
		font-family: "Cormorant Garamond";
		font-weight: 700;
		font-size: 32px;
		line-height: 175%;
		letter-spacing: -2%;
		text-align: center;
	}
	#shopify-section-{{section.id}} .tab {
		display: flex;
		align-items: stretch;
		gap: 33px;
		flex: 1;
	}
	#shopify-section-{{section.id}} .tab_img-wrap {
		width: 100%;
		max-width: 680px;
		height: 400px;
	}
	#shopify-section-{{section.id}} .tab_img-wrap img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 16px;
	}
	#shopify-section-{{section.id}} .tab_btn {
		flex: 1;
		display: flex;
		flex-direction: column;
		gap: 4px;
	}
	#shopify-section-{{section.id}} .tab_btn button {
		display: flex;
		padding: 24px;
		flex-direction: column;
		justify-content: center;
		align-items: flex-start;
		gap: 16px;
		align-self: stretch;
		border-radius: 24px;
		text-align: left;
		color: var(--color-primary);
		font-family: "General Sans";
		font-size: 24px;
		font-style: normal;
		font-weight: 600;
		line-height: 140%;
		flex: 1;
		opacity: 0.5;
	}
	#shopify-section-{{section.id}} .memory-los_card.dark .tab_btn button {
		font-weight: 500;
	}
	#shopify-section-{{section.id}} .tab_btn button p {
		font-family: "General Sans";
		font-weight: 400;
		font-size: 16px;
		line-height: 22.4px;
		letter-spacing: 0%;
		text-align: left;
	}
	#shopify-section-{{section.id}} .tab_btn button:hover,
	#shopify-section-{{section.id}} .tab_btn button.active {
		background: #fff;
		opacity: 1;
	}
	#shopify-section-{{section.id}} .memory-los_card p {
		color: var(--color-primary);
		text-align: center;
		font-family: "Avenir Next Cyr";
		font-size: 37px;
		font-style: normal;
		font-weight: 400;
		line-height: 120%; /* 44.352px */
		margin-top: 48px;
	}
	#shopify-section-{{section.id}} .memory-los_card p span {
		font-family: "Cormorant Garamond";
		font-size: 47px;
		font-style: italic;
		font-weight: 700;
		line-height: 120%;
	}
	
@media (max-width: 768px) {
	#shopify-section-{{section.id}}.hero2 {
		padding-top: 80px;
	}

	#shopify-section-{{section.id}}.hero2 .container {
		flex-direction: column;
		gap: 40px;
		text-align: center;
	}
	#shopify-section-{{section.id}}.memory-loss .container > h2,
	#shopify-section-{{section.id}}.memory-loss .container > h2 > span {
		font-size: 38px;
	}

	#shopify-section-{{section.id}}.hero2 .content {
		max-width: 100%;
	}

	#shopify-section-{{section.id}}.hero2 .illus {
		width: 100%;
		max-width: 400px;
	}

	#shopify-section-{{section.id}} .memory-los_card {
		padding: 16px;
		gap: 24px;
	}

	#shopify-section-{{section.id}} .memory-los_card .label {
		font-size: 24px;
		line-height: 150%;
	}

	#shopify-section-{{section.id}} .tab {
		flex-direction: column;
		gap: 16px;
		width: 100%;
	}

	#shopify-section-{{section.id}} .tab_img-wrap {
		height: 250px;
	}

	#shopify-section-{{section.id}} .tab_btn {
		gap: 8px;
	}

	#shopify-section-{{section.id}} .tab_btn button {
		padding: 16px;
		font-size: 18px;
	}

	#shopify-section-{{section.id}} .memory-los_card p {
		font-size: 24px;
		margin-top: 24px;
	}

	#shopify-section-{{section.id}} .memory-los_card p span {
		font-size: 32px;
	}

}


{% endstyle %}
    
    <div class="container">
        <h2 class=" text-center m-btm m-54">
            Biggest innovation in <br>
            <span>
            memory loss prevention & reversal ever
            </span>
        </h2>

        <div class="memory-los_card">
            <div class="tab">
                <div id="memory-slide" class="tab_img-wrap">
                    <img src={{science-iluss}} alt="">
                    <img src={{science-iluss2}} alt="">
                    <img src={{science-iluss3}} alt="">
                </div>
                <div class="tab_btn">
                    <button id="tab-btn-1" class="active">
                    Are you experiencing brain fog?
                    </button>
                    <button id="tab-btn-2">
                    Have you been caring for a loved one who is experiencing memory loss?
                    </button>
                    <button id="tab-btn-3">
                    Are you proactive in your brain health?
                    </button>
                </div>
            </div>
            <p>
                Are you getting the results you want from your <br>
            <span>
                current methods?
            </span>
            </p>
        </div>
    </div>
    <script>
        $(document).ready(() => {

            $("#memory-slide").slick({
                arrows: false,
                dots: false,
                fade: true,
            });

            $(".tab_btn button").click((e) => {
                const index = e.currentTarget.getAttribute("id").split("tab-btn-")[1];
                $(".tab_btn button").removeClass("active");
                $(e.currentTarget).addClass("active");
                $("#memory-slide").slick("slickGoTo", index);
            });

        });
    </script>
    
    {% schema %}
        {
            "tag": "section",
            "class": "memory-loss"
        }
    {% endschema %}