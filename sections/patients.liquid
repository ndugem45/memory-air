{% style %}

	#shopify-section-{{section.id}} .patient{
		padding-block: 80px;
		background-color: #F6F2F1;
	}
	#shopify-section-{{section.id}} .patient_wraper{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 80px
	}
	#shopify-section-{{section.id}} .patient_title{
		max-width: 600px;
		width: 100%;
		text-align: center;
	}
	#shopify-section-{{section.id}}	.card_patient{
		border-radius: 16px;
		border: 1px solid rgba(60, 46, 37, 0.50);
		padding: 20px;
		height: 450px;
		max-width: 297px;
		width: 100%;
	}
	#shopify-section-{{section.id}}	.patient_card-wrapper{
		display: flex;
		flex-direction: row;
		gap: 32px;
	}

	#shopify-section-{{section.id}}	.card_patient-head {
		border-radius: 16px;
		border: 1px solid var(--Light-3, #E7DBD8);
		background: var(--Light-1, #F6EFDC);
		padding: 12px;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	#shopify-section-{{section.id}} .head_text {
		color: #232323;
		font-family: "Avenir";
		font-size: 20px;
		font-style: normal;
		font-weight: 450;
		line-height: 130%; /* 26px */
		max-width: 120px;
		width: 100%;
	}

	.icon_head{
		width: 60px;
		height: 60px;
		flex-shrink: 0;
		object-fit: contain;
	}

@media (max-width: 768px) {
    #shopify-section-{{section.id}} .patient {
        padding-block: 40px;
    }
	#shopify-section-{{section.id}} .patient_title,
	#shopify-section-{{section.id}} .patient_title-span {
        font-size: 48px;
    }

    #shopify-section-{{section.id}} .patient_card-wrapper {
        flex-direction: column;
        align-items: center;
        gap: 24px;
    }

    #shopify-section-{{section.id}} .card_patient {
        max-width: 100%;
        height: auto;
    }

    #shopify-section-{{section.id}} .head_text {
        font-size: 18px;
		max-width: 100%;
    }

    .icon_head {
        width: 50px;
        height: 50px;
    }
}

		
{% endstyle %}
	

