<section class="faqs-section">
  <div class="container">
    <div class="faqs-flex">
      <div class="faqs-width">
        {% if section.settings.fq_heading != blank %}
        <div class="heading">
          <h2>{{ section.settings.fq_heading }}</h2>
        </div>
        {% endif %}
        {% if section.settings.fq_subheading != blank %}
        <p>{{ section.settings.fq_subheading }}</p>
        {% endif %}
      </div>
      <div class="faqs-width1">
        {% for block in section.blocks %}
            {% if block.type == 'faq' %}
          <div class="faqs-content">
            <div class="question-faqs">
              <h4>{{ block.settings.fq_question }}</h4>
              <div class="faqs-arrow">
                <img src="{{'arrow-down.png' | asset_url}} " alt="#" height="" width="">
              </div>
            </div>
            <div class="faqs-answer">
              <p>{{ block.settings.fq_answer }}</p>
            </div>
          </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "html",
      "id": "fq_heading",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "fq_subheading",
      "label": "Subheading",
      "default": "Answered in no-time."
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "fq_question",
          "label": "Question",
          "default": "How does Memory Air™ work?"
        },
        {
          "type": "textarea",
          "id": "fq_answer",
          "label": "Answer",
          "default": "Aromatherapy believes that a specific odor produces a specific health benefit. The science behind Memory Air™ shows that the improvement in memory is based upon rotating odors - with the more odors, the better. The specific odors do not matter. Memory Air™ science is called Olfactory Enrichment."
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "FAQ Section",
      "category": "FAQ",
      "blocks": [
        {
          "type": "faq"
        },
        {
          "type": "faq"
        }
      ]
    }
  ]
}
{% endschema %}
