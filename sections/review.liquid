#shopify-section-{{section.id}}.review {
	background: linear-gradient(
			180deg,
			rgba(170, 126, 113, 0.0) 0%,
			rgba(170, 126, 113, 0.1) 100%
		), #fff;
}
#shopify-section-{{section.id}}.review .container {
	max-width: 100%;
	padding: unset;
	max-width: 2048px;
}
#shopify-section-{{section.id}}.review h2 {
	margin-bottom: 64px;
}
@media only screen and (min-width: 2048px) {
	#shopify-section-{{section.id}}.review .slider {
		border-radius: 24px;
		overflow: hidden;
	}
}
#shopify-section-{{section.id}}.review .slider_item-wrap {
	padding-inline: 12px;
}
#shopify-section-{{section.id}}.review .slider_item {
	display: flex;
	flex-direction: column;
	max-width: 405px;
	color: var(--color-primary);
}
#shopify-section-{{section.id}}.review .slider_item h3 {
	padding-inline: 16px;
	margin-top: 32px;
}
#shopify-section-{{section.id}}.review .slider_item p {
	flex: 1;
	padding-inline: 16px;
	margin-top: 32px;
	padding-bottom: 20px;
}
#shopify-section-{{section.id}}.review .slider_item img {
	height: 304px;
	width: 100%;
	object-fit: cover;
	border-radius: 24px;
}
#shopify-section-{{section.id}}.review .slider_item .user {
	display: flex;
	flex-direction: column;
	gap: 4px;
	padding-inline: 16px;
}
#shopify-section-{{section.id}}.review .slider_item .user span {
	font-family: "General Sans";
	font-size: 16px;
	font-style: normal;
	font-weight: 400;
	line-height: 140%;
}
#shopify-section-{{section.id}}.review .slider_item .user span:first-child {
	font-weight: 500;
	line-height: 150%;
	text-transform: capitalize;
}

    
