{% assign illus = 'science_illus.png' | asset_url | append: '?v=' | append: 'timestamp' %}

{% style %}
  #shopify-section-{{section.id}}.science .science_content{
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 56px;
  }
  #shopify-section-{{section.id}}.science .science_right{
    display: flex;
    flex-direction: column;
    align-items: start;
  }
  #shopify-section-{{section.id}}.science .science_label{
    font-family: "General Sans Regular";
    color: var(--secondary-50);
    margin-bottom: 36px;
  }
  #shopify-section-{{section.id}}.science .science_stat-wrap{
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  #shopify-section-{{section.id}}.science .science_stat{
    display: flex;
    align-items: center;
    gap: 24px;
  }
{% endstyle %}

<div class="container">
  <h2 class="text-center m-btm m-54 text-primary">
