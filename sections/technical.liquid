{% style %}

#shopify-section-{{section.id}}.technical{
	padding: 80px 0 140px 0;

}

#shopify-section-{{section.id}}.technical .technical_wraper{
	display: flex;
	flex-direction: column;
	justify-content: start;
}

#shopify-section-{{section.id}}.technical .technical_title > h2{
	color: #232323;
	font-family: "Cormorant Garamond";
	font-size: 72px;
	font-style: italic;
	font-weight: 700;
	line-height: 100%; /* 72px */
}
#shopify-section-{{section.id}}.technical .technical_title > p{
	color: #232323;
	font-size: 24px;
	font-style: normal;
	font-weight: 500;
	line-height: 130%; /* 31.2px */
	margin-top: 24px;
	max-width: 1080px;
}
#shopify-section-{{section.id}}.technical .technical_advisor{
	max-width: 1045px;
	margin-left: auto;
	margin-right: auto;
}

#shopify-section-{{section.id}}.technical .advisor_card{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	gap: 50px;
	margin-block: 40px;
}
#shopify-section-{{section.id}}.technical .advisor_card-img > img{
	max-width: 450px;
	width: 100%;
}

#shopify-section-{{section.id}}.technical .advisor_card-text{
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
	max-width: 545px;
	padding: 64px;
}
#shopify-section-{{section.id}}.technical .technical_text-btm{
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
}

#shopify-section-{{section.id}}.technical .technical_btm-quotes{
	color: #3C2E25;
	text-align: center;
	font-family: "Cormorant Garamond";
	font-size: 36px;
	font-style: normal;
	font-weight: 700;
	line-height: 56px; /* 155.556% */
	letter-spacing: -0.72px;
}
#shopify-section-{{section.id}}.technical .technical_btm-name{
	color: #232323;
	font-family: "Cormorant Garamond";
	font-size: 32px;
	font-style: italic;
	font-weight: 700;
	line-height: 32px; /* 100% */
	letter-spacing: -0.1px;
}



{% endstyle %}


