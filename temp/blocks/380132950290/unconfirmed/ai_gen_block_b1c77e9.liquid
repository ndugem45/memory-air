{% doc %}
  @prompt
    I want to add a promotional bar on top of the navigation to show our black friday cyber monday promotion. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-promo-bar-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding }}px 20px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .ai-promo-bar-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .ai-promo-bar-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-promo-bar-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.text_color }};
  }

  .ai-promo-bar-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    line-height: 1.4;
  }

  .ai-promo-bar-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
    font-weight: 600;
    margin-left: 8px;
  }

  .ai-promo-bar-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-promo-bar-close-{{ ai_gen_id }} {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: {{ block.settings.text_color }};
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .ai-promo-bar-close-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-promo-bar-close-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
    stroke: {{ block.settings.text_color }};
  }

  .ai-promo-bar-{{ ai_gen_id }}.hidden {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .ai-promo-bar-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.8 }}px 50px {{ block.settings.padding | times: 0.8 }}px 20px;
    }

    .ai-promo-bar-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }

    .ai-promo-bar-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-promo-bar-close-{{ ai_gen_id }} {
      right: 10px;
    }
  }
{% endstyle %}

<promo-bar-{{ ai_gen_id }}
  class="ai-promo-bar-{{ ai_gen_id }}"
  data-dismissible="{{ block.settings.dismissible }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-promo-bar-content-{{ ai_gen_id }}">
    {% if block.settings.show_icon %}
      <div class="ai-promo-bar-icon-{{ ai_gen_id }}">
        {% if block.settings.icon_type == 'tag' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
            <line x1="7" y1="7" x2="7.01" y2="7"></line>
          </svg>
        {% elsif block.settings.icon_type == 'gift' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 12 20 22 4 22 4 12"></polyline>
            <rect x="2" y="7" width="20" height="5"></rect>
            <line x1="12" y1="22" x2="12" y2="7"></line>
            <path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"></path>
            <path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"></path>
          </svg>
        {% elsif block.settings.icon_type == 'percent' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="19" y1="5" x2="5" y2="19"></line>
            <circle cx="6.5" cy="6.5" r="2.5"></circle>
            <circle cx="17.5" cy="17.5" r="2.5"></circle>
          </svg>
        {% elsif block.settings.icon_type == 'star' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
          </svg>
        {% elsif block.settings.icon_type == 'zap' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
          </svg>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-promo-bar-text-{{ ai_gen_id }}">
      {{ block.settings.message }}
      {% if block.settings.link_text != blank and block.settings.link_url != blank %}
        <a href="{{ block.settings.link_url }}" class="ai-promo-bar-link-{{ ai_gen_id }}">
          {{ block.settings.link_text }}
        </a>
      {% endif %}
    </div>
  </div>

  {% if block.settings.dismissible %}
    <button
      class="ai-promo-bar-close-{{ ai_gen_id }}"
      aria-label="Close announcement"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  {% endif %}
</promo-bar-{{ ai_gen_id }}>

<script>
  (function() {
    class PromoBar{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.storageKey = 'promo-bar-dismissed-{{ ai_gen_id }}';
      }

      connectedCallback() {
        const isDismissible = this.dataset.dismissible === 'true';
        
        if (isDismissible) {
          if (this.isDismissed()) {
            this.classList.add('hidden');
            return;
          }

          const closeButton = this.querySelector('.ai-promo-bar-close-{{ ai_gen_id }}');
          if (closeButton) {
            closeButton.addEventListener('click', () => this.dismiss());
          }
        }
      }

      isDismissed() {
        try {
          return localStorage.getItem(this.storageKey) === 'true';
        } catch (e) {
          return false;
        }
      }

      dismiss() {
        try {
          localStorage.setItem(this.storageKey, 'true');
        } catch (e) {
          console.warn('Unable to save dismissal state');
        }
        this.classList.add('hidden');
      }
    }

    customElements.define('promo-bar-{{ ai_gen_id }}', PromoBar{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Promotional bar",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "message",
      "label": "Message",
      "default": "Black Friday Sale: Save 30% on all Memory Air subscriptions!"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "header",
      "content": "Icon"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show icon",
      "default": true
    },
    {
      "type": "select",
      "id": "icon_type",
      "label": "Icon type",
      "options": [
        {
          "value": "tag",
          "label": "Tag"
        },
        {
          "value": "gift",
          "label": "Gift"
        },
        {
          "value": "percent",
          "label": "Percent"
        },
        {
          "value": "star",
          "label": "Star"
        },
        {
          "value": "zap",
          "label": "Lightning"
        }
      ],
      "default": "tag"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 16,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Icon size",
      "default": 20
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#ffcc00"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link hover color",
      "default": "#ffd633"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 14
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "500"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 8,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Padding",
      "default": 12
    },
    {
      "type": "header",
      "content": "Behavior"
    },
    {
      "type": "checkbox",
      "id": "dismissible",
      "label": "Allow customers to dismiss",
      "default": true,
      "info": "Dismissal state is saved in browser storage"
    }
  ],
  "presets": [
    {
      "name": "Promotional bar"
    }
  ]
}
{% endschema %}
