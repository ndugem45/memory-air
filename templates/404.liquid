{% assign bg = '404-bg.webp' | asset_url | append: '?v=' | append: 'timestamp' %}
{% assign pattern_t_r = 'pattern-top-right.svg' | asset_url | append: '?v=' | append: 'timestamp' %}
{% assign pattern_t_l = 'pattern-top-left.svg' | asset_url | append: '?v=' | append: 'timestamp' %}
{% assign pattern_b_r = 'pattern-bot-right.svg' | asset_url | append: '?v=' | append: 'timestamp' %}
{% assign pattern_b_l = 'pattern-bot-left.svg' | asset_url | append: '?v=' | append: 'timestamp' %}

{% style %}
  .not-found{
    background: linear-gradient(0deg, #F6EFDC 24.28%, #FFF 100%);
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: unset !important;
  }
  .not-found .container{
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    max-width: 1200px;
    padding-block: 120px;
    margin: auto;
    gap: 24px;
    background: url('{{bg}}') no-repeat;
    background-position: center;
    background-size: contain;
  }
  @media only screen and (max-width:480px) {
    .not-found .container{
      background-size: cover;
    }
  }
  .not-found h1{
    color: #3C2E25;
    text-align: center;
    font-family: "Cormorant Garamond";
    font-size: 72px;
    font-style: italic;
    font-weight: 700;
    line-height: 100%;
  }
  .not-found p{
    color: #3C2E25;
    text-align: center;
    font-family: "General Sans Regular";
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    max-width: 500px;
    margin: auto;
  }
  .not-found .btn-wrap{
    justify-content: center;
    margin-top: 8px;
  }
  .not-found .btn-wrap .is-white{
    border: 1px solid #3C2E25 !important;
  }
  .not-found .pattern{
    position: absolute;
    top: 0;
    right: 0;
    z-index: 1;
  }
{% endstyle %}

<section class="not-found" style="min-height: 70vh;padding-top: 20vh;">
  <img src="{{ pattern_t_r }}" alt="" class="pattern"/>
  <img src="{{ pattern_t_l }}" alt="" class="pattern"/>
  <img src="{{ pattern_b_r }}" alt="" class="pattern"/>
  <img src="{{ pattern_b_l }}" alt="" class="pattern"/>
  <div class="container">
    <h1>Lost in a Dream?</h1>
    <p>This page has drifted away into dreamland...
      but your journey with Memory Air<sup>®</sup> is just beginning.
      Let’s get back on track!</p>
      <div class="btn-wrap">
          <a class="btn is-brown" href="/">Back</a>
          <a class="btn is-white" href="/">Go Home</a>
      </div>
  </div>
</section>
